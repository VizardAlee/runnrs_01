<h1 class="text-2xl font-bold text-center my-4">Add or Update Store Logo</h1>
<%= form_with(model: @store, url: update_logo_store_path(@store), method: :patch, local: true, html: { enctype: 'multipart/form-data' }) do |form| %>
  <div class="flex items-center justify-center mt-4">
    <%= form.label :logo, "Upload Logo", class: "block text-gray-700 font-semibold" %>
    <%= form.file_field :logo, class: "mt-2 border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mt-4 text-center">
    <%= form.submit 'Upload', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
