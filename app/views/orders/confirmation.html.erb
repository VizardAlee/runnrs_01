<div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg">
  <h1 class="text-3xl font-bold text-gray-900 mb-4">Order Confirmation</h1>

  <p class="text-lg text-gray-700 mb-6">Thank you for your order!</p>

  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Order Details</h2>
  <p class="text-gray-600"><strong class="font-medium">Order Number:</strong> <%= @order.id %></p>
  <p class="text-gray-600"><strong class="font-medium">Order Date:</strong> <%= @order.created_at.to_formatted_s(:long) %></p>

  <h3 class="text-xl font-semibold text-gray-800 mt-6 mb-3">Items</h3>
  <ul class="list-disc list-inside text-gray-700">
    <% @order.shopping_cart.line_items.each do |item| %>
      <li class="mb-2">
        <%= item.product.name %> 
        <% if item.variation %>
          (<%= item.variation.name %>)
        <% end %>
        - Quantity: <%= item.quantity %> - 
        Price: <%= number_to_currency(item.price, unit: "₦") %>
      </li>
    <% end %>
  </ul>

  <p class="text-lg font-semibold text-gray-800 mt-6"><strong>Total:</strong> <%= number_to_currency(@order.total, unit: "₦") %></p>

  <h3 class="text-xl font-semibold text-gray-800 mt-6 mb-3">Shipping Address</h3>
  <p class="text-gray-700"><%= @order.shipping_address %></p>

  <h3 class="text-xl font-semibold text-gray-800 mt-6 mb-3">Billing Address</h3>
  <p class="text-gray-700"><%= @order.billing_address %></p>

  <h3 class="text-xl font-semibold text-gray-800 mt-6 mb-3">Payment Method</h3>
  <p class="text-gray-700"><%= @order.payment_method %></p>
</div>
