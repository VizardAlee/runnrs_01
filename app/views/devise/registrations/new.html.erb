<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6 text-center">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 text-sm font-semibold mb-2" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-semibold mb-2" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      <% if @minimum_password_length %>
        <p class="text-gray-600 text-xs italic mt-1">
          (<%= @minimum_password_length %> characters minimum)
        </p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex justify-center mt-6">
      <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class: "mt-6 text-center" %>
</div>
