<nav class="flex justify-center mt-4">
  <ul class="flex items-center">
    <% if collection.previous_page %>
      <li>
        <%= link_to 'Previous', url_for(page: collection.previous_page), class: "px-4 py-2 text-white bg-blue-500 rounded hover:bg-blue-700" %>
      </li>
    <% else %>
      <li>
        <span class="px-4 py-2 text-gray-500 bg-gray-200 rounded">Previous</span>
      </li>
    <% end %>

    <% (1..collection.total_pages).each do |page| %>
      <li class="mx-1">
        <%= link_to page, url_for(page: page), class: "px-4 py-2 text-white bg-blue-500 rounded hover:bg-blue-700 #{'bg-blue-700' if collection.current_page == page}" %>
      </li>
    <% end %>

    <% if collection.next_page %>
      <li>
        <%= link_to 'Next', url_for(page: collection.next_page), class: "px-4 py-2 text-white bg-blue-500 rounded hover:bg-blue-700" %>
      </li>
    <% else %>
      <li>
        <span class="px-4 py-2 text-gray-500 bg-gray-200 rounded">Next</span>
      </li>
    <% end %>
  </ul>
</nav>
