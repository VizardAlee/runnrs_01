<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @products.each do |product| %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <% if product.image.attached? %>
        <img src="<%= url_for(product.image) %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
      <% else %>
        <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-500">
          No Image Available
        </div>
      <% end %>
      <div class="p-4">
        <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
        <p class="text-gray-700 mb-4"><%= truncate(product.description, length: 100) %></p>
        <p class="text-green-600 font-bold">Price: <%= number_to_currency(product.price, unit: "â‚¦") %></p>
        <div class="mt-4">
          <%= link_to "View Product", store_product_path(product.store, product), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
